<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.helloworld.auditivo.Traductor">

    <RelativeLayout
        android:id="@+id/h"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/fondo_1_2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/mundo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:text="Hello World"
                android:textColor="@color/white"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:orientation="vertical">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gif"
                android:layout_width="350dp"
                android:layout_height="328dp"
                android:layout_gravity="center"
                android:layout_marginTop="38dp"
                android:src="@drawable/hola" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_above="@id/linear1"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@color/amarillo"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btncameratraducir"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/camaraaa" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@color/jj"
                android:gravity="center">

                <ImageButton

                    android:id="@+id/btnmicrotraducir"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:src="@drawable/microfonoo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@color/jf"
                android:gravity="center">

                <ImageView
                    android:id="@+id/btnPausePlay"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="bottom"
                    android:src="@drawable/carga" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/txtProgreso"
            android:layout_width="174dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp"
            android:background="@drawable/fondo_1_1"
            android:gravity="center"
            android:text="Â¡Hola!"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/swvelocidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout2"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="12dp"
            android:text="Lento   "
            android:textColor="@color/colorPrimary"
            android:textSize="25dp" />

        <!--<ImageView
            android:layout_width="1000dp"
            android:layout_height="52dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="105dp"
            android:layout_marginRight="0dp"

            android:background="@drawable/tapon" />
        <ImageView
            android:layout_width="220dp"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="400dp"
            android:layout_marginBottom="425dp"

            android:background="@drawable/tapon"
            />-->
        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/fondo_traductor"
                android:gravity="center"
                android:orientation="horizontal"

                >

                <EditText
                    android:id="@+id/txtTraducirr"
                    android:layout_width="230dp"
                    android:layout_height="35dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/fondoo"
                    android:ems="8"
                    android:hint="Traducir"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="22dp"

                    />

                <ImageButton
                    android:id="@+id/btnTraducir"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/boton"
                    android:padding="10dp"
                    android:src="@drawable/traducir" />

                <ImageButton
                    android:id="@+id/btnLimpiar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="27dp"
                    android:background="@drawable/boton"
                    android:padding="19dp"
                    android:src="@drawable/limpiar2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Bienvenido a Hello World!"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:textColor="@color/HW_azul"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        />
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:cardElevation="25dp"
        app:cardCornerRadius="110dp"

        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:src="@drawable/icono_hw_google_play_transparente"
            />
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresa tus datos:"
        android:textSize="19dp"
        android:layout_gravity="left"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        />
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:src="@drawable/conector_lineal_verde"
        android:rotation="180"
        />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="  Nombre"
            android:ems="15"
            android:inputType="textPersonName"
            android:drawableLeft="@drawable/user"
            android:textColorHint="@color/black"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            />
        <EditText
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="  Fecha de nacimiento"
            android:ems="15"
            android:editable="false"
            android:textColorHint="@color/black"
            android:layout_gravity="center"
        />
   <at.markushi.ui.CircleButton
       android:layout_width="60dp"
       android:layout_height="60dp"
       android:src="@drawable/ic_action_calendario"
       android:layout_gravity="center"
       app:cb_color="@color/HW_naranja"
       />
    <EditText
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="  Teléfono de emergencia"
        android:ems="15"
        android:drawableLeft="@drawable/ic_action_telefono_emergencia"
        android:textColorHint="@color/black"
        android:layout_gravity="center"
        android:inputType="phone"
        />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:src="@drawable/conector_lineal_amarillo"
        android:layout_marginTop="10dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/HW_verde"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Ingresar"
        android:textAllCaps="false"
        android:padding="10dp"
        android:textSize="20dp"

        />


</LinearLayout>

